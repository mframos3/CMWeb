@model CMWeb.Models.FilesViewModel
    
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
</head>
<body>
<div>
    <title>title</title>
    <p>List of Files</p>
    
    <ul>
        @foreach (var item in Model.Files)
        {
            <li>
                <a asp-action="Download"
                   asp-route-filename="@item.Name">
                    @item.Name
                </a>
            </li>
        }
    </ul>

      
</div>
</body>
</html>