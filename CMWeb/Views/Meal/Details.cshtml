@model CMWeb.Models.Meal

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Meal</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Track)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Track)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Conference)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Conference.SuperConference.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventCenterRoom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventCenterRoom.Name)
        </dd>
    </dl>
</div>
<div>
        @{
            if (!(bool)ViewData["Attendance"])
            {
                <a asp-action="Attend" asp-route-id="@Model.Id">Attend</a>
            }
    
        }
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Details" asp-controller="Conference" asp-route-id="@Model.ConferenceId">Back to Conference</a>
</div>
<br/>
<h3> Meal Options</h3>
<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Soup
        </th>
        <th>
            Entree
        </th>
        <th>
            Main
        </th>
        <th>
            Dessert
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.MealMenus) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.Soup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.Entree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.Main)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.Dessert)
            </td>
        </tr>
    }
    </tbody>
</table>